[
  {
    "name": "theme_info",
    "theme_name": "Cornerstone theme",
    "theme_version": "1.0.0",
    "theme_author": "Kajabi",
    "theme_documentation_url": "",
    "theme_support_url": "https://github.com/Kajabi/theme-cornerstone-page/issues"
  },
  {
    "name": "Favicon",
    "elements": [
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon Image",
        "fit": "crop",
        "width": 32,
        "height": 32,
        "info": "Must be a 32x32 PNG file. Transparency is supported. Please allow some time for favicon to change. Learn how to create your own favicon [here](canva_logos)"
      }
    ]
  },
  {
    "name": "Typography",
    "elements": [
      {
        "type": "header",
        "content": "Typography"
      },
      {
        "type": "font_select",
        "label": "Font Family",
        "id": "font_family",
        "default": "Open Sans",
        "preset": "google_fonts",
        "options": []
      }
    ]
  },
  {
    "name": "Color Scheme",
    "elements": [
      {
        "type": "header",
        "content": "Color Scheme"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary",
        "default": "#222"
      }
    ]
  }
  ,
  {
    "name": "Language",
    "elements": [
      {
        "type": "header",
        "content": "Language"
      },
      {
        "type": "text",
        "id": "language_login",
        "label": "Login Text",
        "default": "Login"
      },
      {
        "type": "text",
        "id": "language_logout",
        "label": "Logout Text",
        "default": "Logout"
      },
      {
        "type": "text",
        "id": "language_settings",
        "label": "Settings Text",
        "default": "Settings"
      },
      {
        "type": "text",
        "id": "language_library",
        "label": "Library Text",
        "default": "My Library"
      },
      {
        "type": "text",
        "id": "complete",
        "label": "Complete Text",
        "default": "Complete Lesson"
      },
      {
        "type": "text",
        "id": "completed",
        "label": "Completed Text",
        "default": "Lesson Completed!"
      },
      {
        "type": "text",
        "id": "favorite",
        "label": "Favorite Text",
        "default": "Favorite"
      },
      {
        "type": "text",
        "id": "favorited",
        "label": "Favorited Text",
        "default": "Favorited"
      },
      {
        "type": "text",
        "id": "downloads",
        "label": "Downloads Text",
        "default": "Downloads"
      }
    ]
  }
]
