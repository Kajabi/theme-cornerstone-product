{% form 'comment', comment %}
  <textarea kjb-settings-id="language_comment_placeholder" id="comment-reply-body" rows="5" placeholder="{{ settings.language_comment_placeholder }}" name="comment[body]">{{ comment.body }}</textarea>
  {% if comment.id %}
    <input kjb-settings-id="{{ language_comment_add }}" class="btn" type="submit" name="commit" data-disable-with="{{ settings.language_comment_submitting }}" value="{{ settings.language_comment_add }}">
  {% else %}
    <input kjb-settings-id="{{ language_comment_add }}" class="btn" type="submit" name="commit" data-disable-with="{{ settings.language_comment_submitting }}" value="{{ settings.language_comment_add }}">
  {% endif %}
{% endform %}
